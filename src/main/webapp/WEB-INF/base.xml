<?xml version="1.0" encoding="UTF-8" ?> 
 <!DOCTYPE tiles-definitions PUBLIC 
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- 布局模板 -->
	<definition name="manage.layout" template="/WEB-INF/views/layout.jsp">
		<put-attribute name="menu" value="" />
		<put-attribute name="title" value="" />
		<put-attribute name="body" value="" />
		<put-list-attribute name="scriptItems">
			<add-attribute value="js/jquery-1.11.1.min.js"></add-attribute>
			<add-attribute value="js/bootstrap.min.js"></add-attribute>
			<add-attribute value="js/jquery.nicescroll.js"></add-attribute>
			<add-attribute value="js/scripts.js"></add-attribute>
			<add-attribute value="js/handlebars.min.js"></add-attribute>
			<add-attribute value="js/page.js"></add-attribute>
		</put-list-attribute>
	</definition>
	<definition name="manage.index" extends="manage.layout">
		<put-attribute name="seq" value="-1"></put-attribute>
		<put-attribute name="title" value="首页" />
		<put-attribute name="body" value="/WEB-INF/views/index.jsp" />
		<put-list-attribute name="scriptItems" inherit="true">
		</put-list-attribute>
	</definition>
	<definition name="project.list" extends="manage.layout">
		<put-attribute name="seq" value="11"></put-attribute>
		<put-attribute name="title" value="项目列表" />
		<put-attribute name="body" value="/WEB-INF/views/project/list.jsp" />
		<put-list-attribute name="scriptItems" inherit="true">
		</put-list-attribute>
	</definition>
</tiles-definitions>
