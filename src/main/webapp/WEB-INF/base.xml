<tiles-definitions>

	<!-- 布局模板 -->
	<definition name="manage.layout" template="/WEB-INF/views/layout.jsp">
		<put-attribute name="menu" value="" />
		<put-attribute name="title" value="" />
		<put-attribute name="body" value="" />
		<put-list-attribute name="scriptItems">
			<add-attribute value="js/jquery-1.10.2.min.js"></add-attribute>
			<add-attribute value="js/jquery-ui-1.9.2.custom.min.js"></add-attribute>
			<add-attribute value="js/jquery-migrate-1.2.1.min.js"></add-attribute>
			<add-attribute value="js/bootstrap.min.js"></add-attribute>
			<add-attribute value="js/modernizr.min.js"></add-attribute>
			<add-attribute value="js/jquery.nicescroll.js"></add-attribute>
			<add-attribute value="js/iCheck/jquery.icheck.js"></add-attribute>
			<add-attribute value="js/dashboard-chart-init.js"></add-attribute>
			<add-attribute value="js/scripts.js"></add-attribute>
			<add-attribute value="js/dashboard-chart-init.js"></add-attribute>
			<add-attribute value="js/morris-chart/morris.js"></add-attribute>
			<add-attribute value="js/morris-chart/raphael-min.js"></add-attribute>
		</put-list-attribute>
